@page
@using EduTic.App.Dominio
@model EduTic.App.Presentacion.Pages.AsignarCargaEModel
@{
     ViewData["Title"] = "Asignar Carga Academica";
}
<head>
    <link rel="stylesheet" href="~/css/Loguin.css" />
    <link rel="stylesheet" href="~/css/estilosLogin.css" />
    <h1>Asignar Carga Academica Estudiante</h1>
</head>

<div class="border">
    <div class="container ">
        <form method="post">
            <div class="row">
                <label for="">Ingrese el Correo</label>
                <input asp-for="estudiante.email">
                <input type="submit" value="Consultar" class="btn btn-primary form-control">
            </div>
        </form>
    </div>
</div>


<div class="border">
    <form method="post" asp-page-handler="edit" >

         <input asp-for="estudiante.id" type="hidden">
        <input asp-for="estudiante.email" type="hidden">
        <div class="container" style="padding: 30px;" >
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.nombres"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.nombres" class="form-control">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.apellidos"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.apellidos" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.edad"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.edad" class="form-control">
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.direccion"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.direccion" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.codigoEstudiante"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.codigoEstudiante" class="form-control">
                    </div>
                </div>
            </div>

             <div class="form-group" >
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="estudiante.grado"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="estudiante.grado" class="form-control">
                    </div>
                </div>

            </div>


             <div class="form-group">
                <div class="row">
                   <label for="lang" class="LabelLeft">
                        <h3>Materia</h3>
                    </label>

                 <select onchange="Mostrar()" id="nombre" class="form-select form-control" asp-items="Model.nombreMateria">
                    <option selected>Seleccione su Materia</option>  
                </select>
                <input type="hidden" id="dato" name="nombres">
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                       <input type="submit" value="Asignar Carga" class="btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="/Index" class="btn btn-success form-control">Volver</a>
                    </div>
                </div>
            </div>

            
        </div>
    </form>

</div> 


 <script type="text/javascript">
function Mostrar (){
    var dato=document.getElementById("nombre");
    var seleccionada=dato.options[dato.selectedIndex].text;
    document.getElementById("dato").value=seleccionada; 
    
}

</script> 