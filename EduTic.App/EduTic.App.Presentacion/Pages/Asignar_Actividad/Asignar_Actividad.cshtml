@page
@model EduTic.App.Presentacion.Pages.Asignar_ActividadModel
@{
    ViewData["Title"] = "Asignar Actividad";
}
<head>
    <link rel="stylesheet" href="~/css/Asignar_Actividad.css" />
</head>
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Sección Asignar Actividad</li>
</ol>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" aria-current="Asignar_Actividad" href="#">Agregar</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="Listar">Listar</a>
  </li>
</ul>
    <div class="card container justify-content-center aling-items-center" style="width: 42rem;">
        <div class="card-body">

    <form>
       <div class="container justify-content-center aling-items-right">
        <div class="mb-2 row">
            <label for="inputPassword" class="h3 col-sm-2 col-form-label">Grado</label>
            <div class="col-sm-7">
                <input type="text" class="form-control form-control-sm" id="inputPassword">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="inputPassword" class="h3 col-sm-2 col-form-label">Materia</label>
            <div class="col-sm-7">
                <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                </select>
            </div>
        </div>
        <div class="mb-2 row">
            <label for="inputPassword" class="h3 col-sm-2 col-form-label">Actividad</label>
            <div class="col-sm-7">
                <input type="text" class="form-control form-control-sm" id="exampleInputPassword1">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="inputPassword" class="h3 col-sm-2 col-form-label">Descripcion</label>
            <div class="col-sm-7 form-floating">
                <textarea  v-model="novedad.novedad" class="form-control form-control-sm" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
            </div>
        </div>
        <div class="mb-2 row">
            <label for="inputPassword" class="h3 col-sm-2 col-form-label">Archivo</label>
            <div class="col-sm-7">
                <input type="file" class="form-control form-control-sm" id="exampleInputPassword1">
            </div>
        </div>
        
        <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </form>
  </div>
</div>